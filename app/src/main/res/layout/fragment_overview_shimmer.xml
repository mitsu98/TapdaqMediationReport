<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/summary_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-smallcaps"
            android:paddingStart="16dp"
            android:paddingTop="16dp"
            android:paddingEnd="16dp"
            android:text="revenue"
            android:textSize="14sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/summary1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_summary"
            android:padding="16dp">


            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_yesterday_revenue_sh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-smallcaps"
                    android:text="Yesterday"
                    android:textSize="14sp"
                    android:textStyle="bold" />


                <View
                    android:id="@+id/vw_yesterday_revenue"
                    android:layout_width="50dp"
                    android:layout_height="20dp"
                    android:layout_below="@id/tv_yesterday_revenue_sh"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/border_radius_bg" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_week_revenue_sh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-smallcaps"
                    android:text="Last 7 days"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <View
                    android:id="@+id/vw_revenue_week"
                    android:layout_width="50dp"
                    android:layout_height="20dp"
                    android:layout_below="@id/tv_week_revenue_sh"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/border_radius_bg" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_month_revenue_sh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-smallcaps"
                    android:text="Last 30 days"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <View
                    android:id="@+id/vw_revenue_month"
                    android:layout_width="50dp"
                    android:layout_height="20dp"
                    android:layout_below="@id/tv_month_revenue_sh"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/border_radius_bg" />
            </RelativeLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_ecpm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/summary1"
            android:fontFamily="sans-serif-smallcaps"
            android:paddingStart="16dp"
            android:paddingTop="16dp"
            android:paddingEnd="16dp"
            android:text="ECPM"
            android:textSize="14sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/summary2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_ecpm"
            android:padding="16dp">


            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_yesterday_cpm_sh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-smallcaps"
                    android:text="Yesterday"
                    android:textSize="14sp"
                    android:textStyle="bold" />


                <View
                    android:id="@+id/vw_today_cpm"
                    android:layout_width="50dp"
                    android:layout_height="20dp"
                    android:layout_below="@id/tv_yesterday_cpm_sh"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/border_radius_bg" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_week_cpm_sh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-smallcaps"
                    android:text="Last 7 days"
                    android:textSize="14sp"
                    android:textStyle="bold" />


                <View
                    android:id="@+id/vw_week_cpm"
                    android:layout_width="50dp"
                    android:layout_height="20dp"
                    android:layout_below="@id/tv_week_cpm_sh"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/border_radius_bg" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_month_cpm_sh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-smallcaps"
                    android:text="Last 30 days"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <View
                    android:id="@+id/vw_month_cpm"
                    android:layout_width="50dp"
                    android:layout_height="20dp"
                    android:layout_below="@id/tv_month_cpm_sh"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/border_radius_bg" />
            </RelativeLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_impression"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/summary2"
            android:fontFamily="sans-serif-smallcaps"
            android:paddingStart="16dp"
            android:paddingTop="16dp"
            android:paddingEnd="16dp"
            android:text="impressions"
            android:textSize="14sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_impression"
            android:padding="16dp">


            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_today_impression_sh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-smallcaps"
                    android:text="Yesterday"
                    android:textSize="14sp"
                    android:textStyle="bold" />


                <View
                    android:id="@+id/vw_today_impression"
                    android:layout_width="50dp"
                    android:layout_height="20dp"
                    android:layout_below="@id/tv_today_impression_sh"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/border_radius_bg" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_week_impression_sh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-smallcaps"
                    android:text="Last 7 days"
                    android:textSize="14sp"
                    android:textStyle="bold" />


                <View
                    android:id="@+id/vw_week_impression"
                    android:layout_width="50dp"
                    android:layout_height="20dp"
                    android:layout_below="@id/tv_week_impression_sh"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/border_radius_bg" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_month_impression_sh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-smallcaps"
                    android:text="Last 30 days"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <View
                    android:id="@+id/vw_month_impression"
                    android:layout_width="50dp"
                    android:layout_height="20dp"
                    android:layout_below="@id/tv_month_impression_sh"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/border_radius_bg" />
            </RelativeLayout>

        </LinearLayout>


    </RelativeLayout>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/separator1"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_below="@id/summary_card" />

    <RelativeLayout
        android:id="@+id/rv_chart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/separator1"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_chart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-smallcaps"
            android:padding="16dp"
            android:text="chart"
            android:textSize="14sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/tx_chart_daily"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_chart"
            android:fontFamily="sans-serif-smallcaps"
            android:padding="16dp"
            android:text="Revenue"
            android:textSize="14sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/rv_daily_revenue"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@id/tx_chart_daily"
            android:layout_marginBottom="8dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_margin="16dp">

                <View
                    android:layout_width="30dp"
                    android:layout_height="15dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/border_radius_bg" />

                <View
                    android:layout_width="30dp"
                    android:layout_height="15dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/border_radius_bg" />

                <View
                    android:layout_width="30dp"
                    android:layout_height="15dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/border_radius_bg" />

                <View
                    android:layout_width="30dp"
                    android:layout_height="15dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/border_radius_bg" />

                <View
                    android:layout_width="30dp"
                    android:layout_height="15dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/border_radius_bg" />

                <View
                    android:layout_width="30dp"
                    android:layout_height="15dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/border_radius_bg" />
            </LinearLayout>


        </RelativeLayout>


        <TextView
            android:id="@+id/tx_chart_ecpm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rv_daily_revenue"
            android:fontFamily="sans-serif-smallcaps"
            android:padding="16dp"
            android:text="ecpm"
            android:textSize="14sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/rv_daily_ecpm"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@id/tx_chart_ecpm"
            android:layout_marginBottom="8dp"

            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_margin="16dp">

                <View
                    android:layout_width="30dp"
                    android:layout_height="15dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/border_radius_bg" />

                <View
                    android:layout_width="30dp"
                    android:layout_height="15dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/border_radius_bg" />

                <View
                    android:layout_width="30dp"
                    android:layout_height="15dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/border_radius_bg" />

                <View
                    android:layout_width="30dp"
                    android:layout_height="15dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/border_radius_bg" />

                <View
                    android:layout_width="30dp"
                    android:layout_height="15dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/border_radius_bg" />

                <View
                    android:layout_width="30dp"
                    android:layout_height="15dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/border_radius_bg" />
            </LinearLayout>


        </RelativeLayout>


        <TextView
            android:id="@+id/tx_chart_impression"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rv_daily_ecpm"
            android:fontFamily="sans-serif-smallcaps"
            android:padding="16dp"
            android:text="impression"
            android:textSize="14sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/rv_daily_impression"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@id/tx_chart_impression"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_margin="16dp">

                <View
                    android:layout_width="30dp"
                    android:layout_height="15dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/border_radius_bg" />

                <View
                    android:layout_width="30dp"
                    android:layout_height="15dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/border_radius_bg" />

                <View
                    android:layout_width="30dp"
                    android:layout_height="15dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/border_radius_bg" />

                <View
                    android:layout_width="30dp"
                    android:layout_height="15dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/border_radius_bg" />

                <View
                    android:layout_width="30dp"
                    android:layout_height="15dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/border_radius_bg" />

                <View
                    android:layout_width="30dp"
                    android:layout_height="15dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/border_radius_bg" />
            </LinearLayout>


        </RelativeLayout>


        <com.google.android.material.card.MaterialCardView
            android:id="@+id/separator2"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_below="@id/rv_daily_impression" />


        <RelativeLayout
            android:id="@+id/rl_networks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/separator2"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tx_networks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-smallcaps"
                android:padding="16dp"
                android:text="@string/home_networks"
                android:textSize="14sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/tx_networks"
                android:padding="16dp">

                <View
                    android:layout_width="70dp"
                    android:layout_height="15dp"
                    android:background="@drawable/border_radius_bg" />

                <View
                    android:layout_width="30dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/border_radius_bg" />
            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>


</RelativeLayout>
